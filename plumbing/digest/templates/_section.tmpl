{{define "_section.tmpl"}}
<details class="section" id="section-{{.Slug}}" open>
<summary><h2>{{.Name}}</h2></summary>

{{if .HeadlineStory}}
{{template "_headline-story.tmpl" .HeadlineStory}}
{{end}}

{{if .GridStories}}
<div class="stories-grid">
{{range .GridStories}}
{{if .IsFiller}}
{{template "_feed-card.tmpl" .Filler}}
{{else}}
{{template "_grid-story.tmpl" .}}
{{end}}
{{end}}
</div>
{{end}}

</details>
{{end}}
